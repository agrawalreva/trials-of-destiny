using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public abstract class Item : MonoBehaviour
{
    protected Animator animator;

    protected bool isPickingUp;

    [SerializeField] protected AudioSource pickUpSound;

    protected virtual void Start()
    {
        animator = GetComponent<Animator>();

        isPickingUp = false;
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
        if (collision.CompareTag("Player") && !isPickingUp)
        {
            PickUp(collision);
        }
    }

    protected abstract void PickUp(Collider2D collision);

    protected abstract void OnPickUpCompleted();
}
